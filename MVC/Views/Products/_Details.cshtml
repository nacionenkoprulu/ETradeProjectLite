@model Product


<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.StockAmount)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.StockAmount)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.UnitPriceDisplay)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.UnitPriceDisplay) Unit(s)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.ExpirationDateDisplay)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.ExpirationDateDisplay) Month/Date/Year
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.IsContinuedDisplay)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.IsContinuedDisplay)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Guid)
        </dt>
        <dd class="col-10">
            @Html.DisplayFor(model => model.Guid)
        </dd>
    </dl>
</div>